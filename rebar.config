{erl_opts, [debug_info]}.
{deps, [
    {cowboy, "2.7.0"},
    {jsx, "3.1.0"},
    {grpcbox, "0.13.0"}
]}.

{grpc, [{protos, "protos"},
        {gpb_opts, [{module_name_suffix, "_pb"}]}]}.

{plugins, [grpcbox_plugin]}.

{relx, [{release, {gm_erl, "0.1.0"},
         [gm_erl,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
